{
  "name": "boonp",
  "version": "0.0.1",
  "author": "Nicol√≤ Pretto <info@npretto.com>",
  "license": "MIT",
  "private": true,
  "workspaces": {
    "packages": [
      "desktop",
      "frontend",
      "core"
    ],
    "nohoist": [
      "@bonp/desktop/**electron**",
      "usb-detection"
    ]
  },
  "scripts": {
    "f": "yarn workspace @bonp/frontend",
    "d": "yarn workspace @bonp/desktop",
    "c": "yarn workspace @bonp/core",
    "clean:node_modules": "rm -rf node_modules **/node_modules",
    "clean": "yarn f clean && yarn c clean",
    "dev": "yarn d tsc -b && stmux -M  -- [ 'yarn workspace @bonp/desktop tsc -b -w' .. 'yarn workspace @bonp/desktop start' ]"
  },
  "dependencies": {
    "rimraf": "^3.0.2",
    "stmux": "^1.8.1"
  }
}
